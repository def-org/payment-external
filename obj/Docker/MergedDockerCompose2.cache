networks:
  external_payment_net:
    driver: bridge
services:
  external.paymentgateway:
    build:
      context: C:\_dev\docker-definitivo-commerce\payment-external
      dockerfile: External.PaymentGateway/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: External.PaymentGateway
      target: base
    container_name: External.PaymentGateway
    depends_on:
    - message_broker
    - mongo
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: externalpaymentgateway:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.1/External.PaymentGateway.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      external_payment_net: {}
    ports:
    - published: 80
      target: 80
    tty: true
    volumes:
    - C:\_dev\docker-definitivo-commerce\payment-external\External.PaymentGateway:/app:rw
    - C:\Users\luizc\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\luizc\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\luizc\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Users\luizc\.nuget\packages:/root/.nuget/packages:ro
    - C:\_dev\docker-definitivo-commerce\payment-external:/src:rw
  message_broker:
    container_name: rabbitmq_teste
    environment:
      RABBITMQ_DEFAULT_PASS: password
      RABBITMQ_DEFAULT_USER: user
    image: rabbitmq:3.8-management
    networks:
      external_payment_net: {}
    ports:
    - published: 15672
      target: 15672
    volumes:
    - rabbitmq_data:/var/lib/rabbitmq:rw
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo:4.2.6
    networks:
      external_payment_net: {}
    ports:
    - published: 27017
      target: 27017
    volumes:
    - mongo_data:/data/db:rw
version: '3.4'
volumes:
  mongo_data: {}
  rabbitmq_data: {}