networks:
  external_payment_net:
    driver: bridge
services:
  external.paymentgateway:
    build:
      context: C:\_dev\docker-definitivo-commerce\payment-external
      dockerfile: External.PaymentGateway/Dockerfile
    depends_on:
    - message_broker
    - mongo
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: externalpaymentgateway
    networks:
      external_payment_net: {}
    ports:
    - published: 80
      target: 80
  message_broker:
    container_name: rabbitmq_teste
    environment:
      RABBITMQ_DEFAULT_PASS: password
      RABBITMQ_DEFAULT_USER: user
    image: rabbitmq:3.8-management
    networks:
      external_payment_net: {}
    ports:
    - published: 15672
      target: 15672
    volumes:
    - rabbitmq_data:/var/lib/rabbitmq:rw
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo:4.2.6
    networks:
      external_payment_net: {}
    ports:
    - published: 27017
      target: 27017
    volumes:
    - mongo_data:/data/db:rw
version: '3.4'
volumes:
  mongo_data: {}
  rabbitmq_data: {}